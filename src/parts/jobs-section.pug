-
    var slider = [
        {'text': 'Курьер на авто компании', 'link': '#','pic' : './img/jobs-1.jpg', 'city' : 'волковыск'},
        {'text': 'Пиццамейкер', 'link': '#', 'pic' : './img/jobs-2.jpg', 'city' : 'волковыск'},
        {'text': 'Курьер на личном авто', 'link': '#', 'pic' : './img/jobs-3.jpg', 'city' : 'волковыск'},
        {'text': 'Курьер на авто компании 2', 'link': '#','pic' : './img/jobs-1.jpg', 'city' : 'волковыск'},
        {'text': 'Пиццамейкер 2', 'link': '#', 'pic' : './img/jobs-2.jpg', 'city' : 'волковыск'},
        {'text': 'Курьер на личном авто 2', 'link': '#', 'pic' : './img/jobs-3.jpg', 'city' : 'волковыск'}
    ]

mixin slider(items)
    .jobs__slider(JS_Slider)
        each item in slider
            .jobs__item
                .jobs__city= item.city
                .jobs__item-inner
                    .jobs__image
                        img(src=item.pic)
                    h3.jobs__item-title
                        a(href=item.link)= item.text
                    .jobs__bottom
                        button.jobs__button.btn.btn-orange.btn-blink  Подробнее
    - var n = 0;
    .jobs__dots
        while n < 4
            span(data-num= n++).jobs__dot

section.jobs
    .container
        .jobs__title.title-h2 Fudi pizza в поисках
        +slider(slider)